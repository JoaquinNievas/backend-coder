<div class="container">
  <h1>Carga de productos</h1>

  <form action="/api/productos" method="POST">
    <div class="mb-3">
      <label for="title">Title</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        placeholder="Escribe el título"
        required
      />
    </div>
    <div class="mb-3">
      <label for="price">Price</label>
      <input
        type="text"
        class="form-control"
        id="price"
        name="price"
        placeholder="99.99"
        required
      />
    </div>
    <div class="mb-3">
      <label for="thumbnail">Thumbnail</label>
      <input
        type="text"
        class="form-control"
        id="thumbnail"
        name="thumbnail"
        placeholder="URL de imagen"
        required
      />
    </div>
    <div class="col-md-12 text-center">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
  <div class="col-md-12 text-center">
    <a href="/api/productos" class="btn btn-secondary">Ir a sección productos</a>
  </div>

</div>